#!/bin/sh

# This script is derived from 
# [cargo-hook](https://github.com/jackos/cargo-hook),
# whiche, at the time of this writing, is realesed without
# any license information.

STAGED_FILES=$(git diff --cached --name-only --diff-filter=ACMR | sed 's| |\\ |g')

echo "---------------------------"
echo "- ‚ú®  Running clippy   ‚ú® -"
echo "---------------------------"
cargo clippy -- -Dwarnings
LINTER_EXIT_CODE=$?

if [ $LINTER_EXIT_CODE -ne 0 ]; then
    echo "---------------------------"
    echo "- ‚ùå Fix clippy errors ‚ùå -"
    echo "---------------------------"

    exit 1
else
    echo "‚úÖ"
fi

echo "---------------------------"
echo "- ‚ú® Running formatter ‚ú® -"
echo "---------------------------"
cargo fmt
echo "‚úÖ"

git add -f $STAGED_FILES

echo "---------------------------"
echo "- ‚ú®   Running tests   ‚ú® -"
echo "---------------------------"
cargo test --all-features
TEST_EXIT_CODE=$?

if [ $TEST_EXIT_CODE -ne 0 ]; then
    echo "---------------------------"
    echo "- ‚ùå  Fix test errors  ‚ùå -"
    echo "---------------------------"
    exit 1
else
    echo "‚úÖ"
fi

echo "--------------------------------------"
echo "- üéâ linted, formatted and tested üéâ -"
echo "--------------------------------------"
exit 0